[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    C0103,  # invalid-name (for UPPER_CASE constants)
    C0301,  # line-too-long
    C0302,  # too-many-lines
    C0415,  # import-outside-toplevel
    W0212,  # protected-access
    W0718,  # broad-exception-caught
    W0707,  # raise-missing-from
    W0613,  # unused-argument
    W0108,  # unnecessary-lambda
    W0706,  # try-except-raise
    W0105,  # pointless-string-statement
    W0404,  # reimported
    W0621,  # redefined-outer-name
    W1203,  # logging-fstring-interpolation
    W1514,  # unspecified-encoding
    R0801,  # duplicate-code
    R0902,  # too-many-instance-attributes
    R0903,  # too-few-public-methods
    R0911,  # too-many-return-statements
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    R0917,  # too-many-positional-arguments
    R1705,  # no-else-return
    R1731,  # consider-using-max-builtin
    E0213,  # no-self-argument (pydantic validators)
    E0611,  # no-name-in-module (false positives for dynamic imports)
    E1101,  # no-member (false positives for dynamic attributes)
    E1120,  # no-value-for-parameter (false positives)
    E1121,  # too-many-function-args (false positives)
    E1123,  # unexpected-keyword-arg (false positives)
    E1124,  # redundant-keyword-arg (false positives)
    C0201,  # consider-iterating-dictionary

[FORMAT]
max-line-length=120
